{{#if site.social}}
<div class="social">

  {{#if site.social.twitter}}<div>
    <a href="https://twitter.com/share" class="twitter-share-button" {{#if site.social.twitter.via}}data-via="{{ site.social.twitter.via }}"{{/if}} data-text="{{ title }}" data-related="{{ site.twitter }}">Tweet</a>
  </div>
  {{/if}}

  {{#if site.social.facebook}}
  <div>
    <div class="fb-like" data-width="150" data-layout="button_count" data-action="like" data-show-faces="true" data-send="false"></div>
  </div>
  {{/if}}

  {{#if site.social.gplus}}
  <div>
    <div class="g-plusone" data-size="medium"></div>
  </div>
  {{/if}}

  {{! Hacker News }}
  {{#if site.social.hn}}
  <div>
    <a href="http://news.ycombinator.com/submit" class="hn-share-button">Vote on HN</a>
  </div>
  {{/if}}
</div>
{{/if}}
